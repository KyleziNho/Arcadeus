{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "outDir": "./dist/mcp",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "mcp-servers/**/*",
    "mcp-clients/**/*",
    "mcp-tools/**/*",
    "mcp-types/**/*",
    "mcp-config/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}